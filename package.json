{
  "name": "tetris",
  "productName": "tetris",
  "version": "1.2.1",
  "description": "A simple tetris game",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ArthurLobopro/tetris.js"
  },
  "keywords": [],
  "author": {
    "name": "Arthur Lobo",
    "email": "64273139+ArthurLobopro@users.noreply.github.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./build/icon.ico",
        "ignore": [
          "\\.git",
          "\\.scss",
          "/build"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "tetris",
            "setupExe": "${name}-${version}-setup.exe",
            "setupIcon": "./build/icon.ico",
            "iconUrl": "https://raw.githubusercontent.com/ArthurLobopro/tetris/master/build/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "ArthurLobopro",
              "name": "tetris.js"
            },
            "prerelease": true
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.1",
    "@electron-forge/maker-deb": "^6.0.1",
    "@electron-forge/maker-rpm": "^6.0.1",
    "@electron-forge/maker-squirrel": "^6.0.1",
    "@electron-forge/maker-zip": "^6.0.1",
    "@electron-forge/publisher-github": "^6.0.1",
    "electron": "^17.0.1",
    "sass-compiler": "^1.2.3"
  }
}